{
  "name": "snowfy",
  "version": "1.0.0",
  "description": "A Spotify-like desktop music player that streams from free sources",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --linux"
  },
  "keywords": [
    "music",
    "player",
    "electron",
    "youtube",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "ytmusic-api": "^5.3.1"
  },
  "build": {
    "appId": "com.nyaku.snowfy",
    "productName": "Snowfy",
    "icon": "assets/logo.png",
    "linux": {
      "target": ["AppImage"],
      "category": "Audio",
      "icon": "assets/logo.png"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  }
}
